<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itheima.dao.OrderSettingDao">
    <insert id="add" parameterType="com.itheima.pojo.OrderSetting">
        insert into
            t_ordersetting
        values
            (null,#{orderDate},#{number},#{reservations})
    </insert>

    <select id="findCountByOrderDate" resultType="long" parameterType="date">
        select
            count(1)
        from
            t_ordersetting
        where
            orderDate = #{orderDate}
    </select>

    <update id="editNumberByOrderDate" parameterType="com.itheima.pojo.OrderSetting">
        update
            t_ordersetting
        set
            number = #{number}
        where
            orderDate = #{orderDate}
    </update>
    <select id="getOrderSettingByMonth" parameterType="hashmap" resultType="com.itheima.pojo.OrderSetting">
        select * from
            t_ordersetting
        where
            orderDate
        between
            #{startday} and #{endday}
    </select>
    <update id="changeNumberByDate" parameterType="com.itheima.pojo.OrderSetting">
        update
            t_ordersetting
        set
            number = #{number}
        where
            orderDate = #{orderDate}
    </update>
</mapper>